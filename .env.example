# .env - Environment variables configuration
# Copy this file to .env and fill in your values
# This file is loaded automatically by the application

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=production
DEBUG=false

# ============================================================================
# SERVER SETTINGS
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================
MAX_UPLOAD_SIZE_MB=100
TEMP_DIR=/tmp/epaper-uploads


# ============================================================================
# WORDPRESS SETTINGS
# ============================================================================
WORDPRESS_URL=http://localhost/wp-json/wp/v2/posts
WORDPRESS_USERNAME=admin
WORDPRESS_PASSWORD=your_app_password_here
WORDPRESS_CATEGORIES_URL=http://localhost/wp-json/wp/v2/categories?per_page=100
WORDPRESS_AUTHORS_URL=http://localhost/wp-json/wp/v2/users?per_page=100
WORDPRESS_ENABLE_POSTING=false

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=

# ============================================================================
# SECURITY SETTINGS (Optional)
# ============================================================================
REQUIRE_AUTH=false
API_KEY=
